<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_c1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select date :"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        />
    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:editable="false"
        >
    </EditText>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:id="@+id/date_button"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="260dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_below="@+id/card_c1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old address :"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:editable="false"
        android:id="@+id/oldaddress" />


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/oldaddress"
       android:orientation="horizontal"
       >

       <EditText
           android:layout_width="235sp "
           android:layout_height="wrap_content"
           android:layout_marginTop="5sp"
           android:id="@+id/ET_addess"
           android:gravity="center"
           android:lines="8"
           />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="change"
           android:id="@+id/BTN_change"
           android:layout_marginTop="70sp"
           android:layout_marginLeft="25dp"
          />

   </LinearLayout> </android.support.v7.widget.CardView>



    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_app_app"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="395dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:text="Take an appointment"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:background="#1A5276"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/BTN_app_pro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="455dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:text="Proceed to Order"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:background="#1A5276"/>



</RelativeLayout>